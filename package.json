{
  "name": "auto-header-template",
  "displayName": "Auto Header Template",
  "description": "Automatic generation of the file's template header.",
  "version": "0.0.1",
  "author": "shenyang",
  "repository": {
    "type": "git",
    "url": "https://github.com/all-for-freedom/auto-header-template"
  },
  "homepage": "https://github.com/all-for-freedom",
  "bugs": {
    "url": "https://github.com/all-for-freedom/auto-header-template/issues"
  },
  "keywords": [
    "auto",
    "template"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "ath.png",
  "galleryBanner": {
    "color": "#2D2D2D",
    "theme": "dark"
  },
  "contributes": {
    "configuration": {
      "title": "Auto Header Template",
      "properties": {
        "autoHeaderTemplate.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用/禁用自动插入文件头模板"
        },
        "autoHeaderTemplate.author": {
          "type": "string",
          "default": "Shen Yang",
          "description": "模板中使用的作者名称"
        },
        "autoHeaderTemplate.university": {
          "type": "string",
          "default": "Hunan Normal University",
          "description": "模板中使用的大学/机构名称"
        },
        "autoHeaderTemplate.email": {
          "type": "string",
          "default": "yangshen@hunnu.edu.cn",
          "description": "模板中使用的邮箱地址"
        },
        "autoHeaderTemplate.templates": {
          "type": "object",
          "default": {},
          "description": "自定义文件模板，按文件扩展名配置。支持变量：${fileName}, ${fileNameWithoutExt}, ${author}, ${university}, ${email}, ${datetime}, ${date}, ${dateISO}, ${year}, ${month}, ${day}。例如：{\".ts\": \"/**\\n * @file ${fileName}\\n * @author ${author}\\n * @date ${datetime}\\n */\"}"
        }
      }
    },
    "commands": [
      {
        "command": "autoHeaderTemplate.configure",
        "title": "配置个人信息",
        "category": "Auto Header Template"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
